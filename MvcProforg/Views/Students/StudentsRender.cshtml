@model IEnumerable<ProforgDataEF.tab_students>

@{
    ViewBag.Title = "Студенти";
}

<h2>Студенти</h2>

<p>
    @Html.ActionLink("Додати студента", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.student_name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.groups.group_name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.student_name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.groups.group_name)
        </td>
        <td>
            @Html.ActionLink("Редагувати", "Edit", new { id=item.student_ID }) |
            @Html.ActionLink("Видалити", "Delete", new { id=item.student_ID })
        </td>
    </tr>
}

</table>
